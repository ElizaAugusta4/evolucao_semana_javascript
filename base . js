let idadeMae = 55;  
let soma = minhaIdade + idadeMae;
console.log(soma)
let subtracao = minhaIdade - idadeMae
console.log(subtracao)
let multiplicacao = minhaIdade * idadeMae;
console.log(multiplicacao);
let resto = minhaIdade % idadeMae == 0; 
console.log(resto);
